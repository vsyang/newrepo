<% if (title) { %>
  <h1>
    <%= title %>
  </h1>
<% } else { res.redirect('/') } %>

<%- messages() %>

<% if (errors) { %>
  <ul class="notice">
  <% errors.array().forEach(error => { %>
  <li><%= error.msg %></li>
<%  }) %>
  </ul>
<% } %>

<div class="add-classification">
  <p>
    Field is required.
  </p>

  <form id="addClassificationForm" class="form" action="/inv/add-classification" method="post">
    <fieldset>
      <legend>&nbsp;</legend>
      <label class="class-name" for="classification_name">Classification Name</label>
      <p>NAME MUST BE ONE WORD AND ALPHABETIC CHARACTERS ONLY</p>
      <input
        type="text"
        id="classification_name"
        name="classification_name"
        required
        pattern="^[A-Za-z]+$"
        value="<%= locals.classification_name %>"
      >
      <button class="submit" type="submit">Add Classification</button>
    </fieldset>
  </form>
</div>